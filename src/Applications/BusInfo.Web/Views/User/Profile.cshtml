@using BusInfo.Core.Classes
@model DriverViewModel;
@{
    Layout = "_Layout";
}
<head>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>


    <link href="~/css/app.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>
<div class="main">
    
    <main class="content">
        
        <div class="container-fluid p-0">
                <form asp-action="UpdateProfile" method="post" asp-controller="User">
            <div class="mb-3">
                <h1 class="h3 d-inline align-middle">Ронанада</h1>

            </div>
                    <div class="row">
                        <div class="col-md-4 col-xl-3">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Маълумот дар бораи ронанда</h5>
                                </div>
                                <div class="card-body text-center">
                                    <img src="~/img/avatars/avatar_man.jpg" alt="Christina Mason" class="img-fluid rounded-circle mb-2" width="128" height="128"/>
                                    <h5 class="card-title mb-0">@Model.DriverName @Model.DriverSurname</h5>


                                </div>
                                <hr class="my-0"/>

                                @{
                                    if (Model.Bus != null)
                                    {

                                        <div class="card-body text-center">
                                            <h5 class="h6 card-title">Нақлиёт</h5>
                                            <div class="mt-2">Рақами давлатӣ: @Model.Bus.BusNum</div>
                                            <div class="mt-2 mb-2">Хатсайри @Model.Bus.RouteNum </div>
                                            <button type="button" class="btn btn-primary btn-sm" onclick="	window.location.href = '/Bus/View/@Model.Bus.Id';">
                                                Ивазкунӣ
                                            </button>
                                        </div>

                                        <div class="card-body">

                                        </div>
                                    }
                                    else
                                    {
                                        <div class="card-body text-center">
                                            <h5 class="h6 card-title">Нақлиёт</h5>
                                            <div class="mt-2">Рақами давлатӣ: ---- </div>
                                            <div class="mt-2 mb-2">Хатсайри -- </div>
                                            <button type="button" class="btn btn-primary btn-sm" onclick="Edit()">
                                                Ивазкунӣ
                                            </button>
                                        </div>

                                        <div class="card-body">

                                        </div>
                                    }

                                }
                            </div>
                        </div>

                        <div class="col-md-8 col-xl-9">
                            <div class="card">
                                <div class="card-header">

                                    <h5 class="card-title mb-0">Ивазкунии маълумот</h5>
                                </div>

                                <div class="card-body h-100 w-100">
                                    <h6>Маълумоти асосӣ</h6>
                                    <div class="d-flex align-items-start">
                                        <div class="row flex-grow-1 flex-row">
                                            <div class="col">
                                                <div class="form-group">
                                                    <label for="Name">Номи ронанда</label>
                                                    <input type="text" class="form-control" id="Name" asp-for="DriverName" required>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-group">
                                                    <label for="SurName">Насаби ронанда</label>
                                                    <input type="text" class="form-control" asp-for="DriverSurname" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <hr/>
                                    <h6>Корбари дар система</h6>
                                    <div class="d-flex align-items-start">
                                        <div class="row flex-grow-1 flex-row">
                                            <div class="col">
                                                <div class="form-group">
                                                    <label for="Login">Логин</label>
                                                    <input type="text" class="form-control" asp-for="DriverLogin" required>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="form-group">
                                                    <label for="Password">Рамзи махфӣ</label>
                                                    <input type="hidden" asp-for="Id"/>
                                                    <input type="text" class="form-control" asp-for="DriverPassword" required>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="d-flex align-items-start pt-3">
                                        <div class="row flex-grow-1 flex-row ">
                                            <div class="col">

                                                <input type="submit" value="Save" class="btn btn-primary"/>
                                            </div>
                                            <div class="col">
                                                <button id="myBtn" class="btn btn-danger" onclick="location.href='/User/Delete/@Model.Id'">Хориҷ кардан</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <input asp-for="IsCreate" type="hidden"/>
                </form>
        </div>
    </main>

</div>
</body>

