@model List<BusInfo.Core.Classes.Driver>
@{
    Layout = "_Layout";
}
<body>
<main class="content">
    <div class="container-fluid p-0">

        <h1 class="h3 mb-3">Рӯйхати ронандагон</h1>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                        <div class="">
                            <button class="btn-primary btn pull-right"  id="pAdd" name="pAdd" onclick="location.href='/Driver/Add'">Дохилкунӣ</button>
                        </div>
                    </div>
                    <div class="card-body">

                        <table class="table table-hover my-0">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Номи ронанда</th>
                                <th>Насаби ронанда</th>
                                <th>Логини ронанда</th>
                                <th>Диганкуни</th>
                                <th>Хориҷкунӣ</th>
                            </tr>
                            </thead>
                            <tbody id="body">
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <tr class="clickable-row" data-href="#mymodal" id="row-@i "data-toggle="modal">
                                    <td>@(i + 1)</td>
                                    <td id="placeName-@i">@Model[i].DriverName</td>
                                    <td id="latitude-@i">@Model[i].DriverSurname</td>
                                    <td id="longitude-@i">@Model[i].DriverLogin</td>
                                    <td><button type="button" class="btn btn-primary btn-sm" id="editBtn-@i" onclick="location.href='/Driver/View/'+'@Model[i].Id'">Дигаркунӣ</button>
                            
                                    <td><button type="button" class="btn btn-danger btn-sm" id="deleteBtn-@i" onclick="location.href='/User/Delete/'+'@Model[i].Id'">Хориҷкунӣ</button></td>

                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
document.getElementById("home").classList.remove("active");
document.getElementById("drivers").classList.add("active");
</script>
</body>
